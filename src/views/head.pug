- const pageTitle = meta?.title || 'Wonderflow'
- const pageDescription = meta?.description || 'Wonderflow – Creative development workshops'
- const fullUrl = BASE_URL + (req?.url || '/')

title #{pageTitle}
meta(charset='utf-8')
meta(name='viewport', content='width=device-width, initial-scale=1')
meta(name='robots', content='index, follow')
meta(name='googlebot', content='index, follow')

meta(name='description', content=pageDescription)
meta(name='keywords', content='Ateliers créatifs, Atelier, Développement personnel, Développement professionnel, Atelier en ligne, Tai-chi Qigong, Écoute Intérieure, Formation professionnelle, Développement personnel, Atelier créatif Montréal, Formation en ligne')
meta(name='author', content='Vanessa Gerold')

meta(property='og:title', content=pageTitle)
meta(property='og:url', content=fullUrl)
meta(property='og:image', content='https://wonderflow.ca/img/jpg/wonderflow.jpg')
meta(property='og:description', content=pageDescription)
meta(property='og:site_name', content='Wonderflow')
meta(property='og:locale', content=(locale === 'en-ca' ? 'en_CA' : 'fr_CA'))
meta(property='og:type', content='website')
meta(property='og:see_also', content='https://wonderflow.ca/')

link(rel='canonical', href=fullUrl)

link(rel='apple-touch-icon', href='/img/svg/yellow-dot.svg')
link(rel='alternate icon', href='/img/svg/yellow-dot.svg', type='image/x-icon')
link(rel='alternate icon', href='/img/png/yellow-dot.png')
link(rel='stylesheet', href='/vendor/cookieconsent/cookieconsent.css')
link(rel='stylesheet', href='/css/styles.css')


